<form
  action="/login"
  method="POST"
  style="background-color: #f0f0f0; padding: 20px; border-radius: 8px;"
>
  <input
    type="text"
    name="username"
    placeholder="Username"
    style="margin-bottom: 10px; width: 200px; padding: 8px;"
  />
  <input
    type="password"
    name="password"
    style="margin-bottom: 10px; width: 200px; padding: 8px;"
  />
  <button
    type="submit"
    style="background-color: blue; color: white; padding: 10px 15px; border: none; border-radius: 4px;"
  >Submit</button>
</form>